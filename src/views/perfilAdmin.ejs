<!-- Para esta vista tengo que loguearme como admin  -->

<%- include('layouts/main.ejs') %>
<div class="container perfil">
    <div class="row">
        <div class="col s3 my-custom-column">
            <h4>Perfil:</h4>
        </div>
        <div class="col s3 my-custom-column">
            <h4><%= user ? user.role : 'N/A' %></h4>
        </div>
        <div class="col s3 my-custom-column">
            <h4>Id: <%= user ? user.email : 'N/A' %></h4>
        </div>
    </div>
</div>

<!-- Buscador  -->
<div class="container_search">
    <div class="input-field">
        <input type="text" id="buscarCliente" placeholder="Buscar cliente"><i class="material-icons">search</i>
        <label for="buscarCliente"></label>
    </div>
</div>

<div class="dashboard">
    <!-- Boton abre form add -->
    <div class="container_agregar">
        <h1>Lista de Clientes</h1>
        <a class="waves-effect waves-light btn modal-trigger btn_add" href="#modalAgregar">
            Agregar<i class="material-icons right">add</i>
        </a>
    </div>

    <!-- Modal para el formulario de creación de cliente -->
    <div id="modalAgregar" class="modal">
        <div class="modal-content">
            <h4>Agregar Cliente</h4>
            <form action="/perfilAdmin/createClient" method="POST">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" required>
                <label for="lastname">Apellido:</label>
                <input type="text" id="lastname" name="lastname" required>
                <label for="contact">Contacto:</label>
                <input type="text" id="contact" name="contact">
                <div class="container">
                    <!-- aca iria el calendario que seleccionará de cuando será el evento -->
                    <label for="eventDate">Fecha del Evento:</label>
                    <input type="date" id="eventDate" name="eventDate" required>
                     <!-- Tipo de Salón -->
                    <label for="salonType">Tipo de Salón:</label>
                    <select id="salonType" name="salonType" required>
                        <option value="" disabled selected>Seleccionar salón</option>
                        <option value="viaDolce">Via Dolce</option>
                        <option value="calavera">Calavera</option>
                        <option value="canillitas">Canillitas</option>
                        <option value="siciliana">Siciliana</option>
                        <option value="asociacionJaponesa">Asociación Japonesa</option>
                        <option value="cirse">Cirse</option>
                        <option value="servicioDomicilio">Catering a domicilio</option>
                    </select>
                    <div id="availabilityMessage"></div>
                </div>
                <label for="details">Detalles:</label>
                <textarea id="details" name="details"></textarea>
                <label for="role">Rol:</label>
                <select id="role" name="role">
                    <option value="cliente" selected>Cliente</option>
                </select>
                <button type="submit" class="modal-close waves-effect waves-green btn">Crear Cliente</button>
            </form>
        </div>
    </div>

    <div id="modalEditar" class="modal">
        <div class="modal-content">
            <h4>Editar Cliente</h4>
            <form id="formEditar" action="/perfilAdmin/update" method="POST">
                <input type="hidden" id="clientId" name="clientId">
                <label for="email">Email:</label>
                <input type="email" id="emailEditar" name="email" required>
                <label for="name">Nombre:</label>
                <input type="text" id="nameEditar" name="name" required>
                <label for="lastname">Apellido:</label>
                <input type="text" id="lastnameEditar" name="lastname" required>
                <label for="contact">Contacto:</label>
                <input type="text" id="contactEditar" name="contact">
                <label for="details">Detalles:</label>
                <textarea id="detailsEditar" name="details"></textarea>
                <!-- Campos de pago -->
                <label for="amountChild">Monto por Niños:</label>
                <input type="number" id="amountChild" name="amountChild" required>
                <label for="amountAdult">Monto por Adultos:</label>
                <input type="number" id="amountAdult" name="amountAdult" required>
                <label for="specificDetails">Aclaraciones:</label>
                <textarea id="specificDetails" name="specificDetails"></textarea>
                <button type="submit" class="waves-effect waves-green btn">Editar Cliente</button>
                <button type="button" class="waves-effect waves-red btn modal-close">Cancelar</button>
            </form>
        </div>
    </div>
    <!-- Vista lista de clientes -->
    <div class="listaClientes">
        <table class="responsive-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Contacto</th>
                    <th>Detalles</th>
                    <th>Fecha del Evento</th>
                    <th>Tipo de Salón</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <% if (clients.length > 0) { %>
            <tbody id="listaClientesBody">
                <% clients.forEach(client => { %>
                <tr>
                    <td class="client-name"><%= client.name %></td>
                    <td class="client-lastname"><%= client.lastname %></td>
                    <td class="client-email"><%= client.email %></td>
                    <td class="client-contact"><%= client.contact %></td>
                    <td class="client-details"><%= client.details %></td>
                    <td class="client-eventDate"><%= client.eventDate %></td>
                    <td class="client-salonType"><%= client.salonType %></td>
                    <td>
                        <div class="edit_delete">
                            <!-- Modal para editar / eliminar cliente por su id  -->
                            <a href="#client-details" class="details-button" data-id="<%= client._id %>">
                                <i class="material-icons">visibility</i>
                            </a>
                            <a href="#modalEditar" class="modal-trigger edit-button" data-id="<%= client._id %>" data-email="<%= client.email %>" data-name="<%= client.name %>" data-lastname="<%= client.lastname %>" data-contact="<%= client.contact %>" data-details="<%= client.details %>" data-eventdate="<%= client.eventDate %>" data-salontype="<%= client.salonType %>" data-amountchild="<%= client.amountChild %>" data-amountadult="<%= client.amountAdult %>" data-specificdetails="<%= client.specificDetails %>">
                                <i class="material-icons delete_button">edit</i>
                            </a>                            
                            <form action="/perfilAdmin/delete/<%= client._id %>" method="POST" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este cliente?');">
                                <button type="submit" class="delete_button">
                                    <i class="material-icons delete_button">delete_forever</i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
            <% } else { %>
            <p>No hay clientes en la base de datos.</p>
            <% } %>
        </table>
        <div id="mensajeResultado" class="red-text" style="display: none;">No hay resultados que coincidan con la búsqueda, o no existe ese cliente en su base de datos.</div>
        </div>
</div>
<!-- Vista detalles según clientId -->
    <div id="client-details">
    </div>

<%- include('layouts/footer.ejs') %>